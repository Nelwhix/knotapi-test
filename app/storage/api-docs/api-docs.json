        "/api/v1/task/{uuid}": {
            "patch": {
                "tags": [
                    "Task"
                ],
                "summary": "update task status",
                "operationId": "c7d3a9bf5e7d1bfefc4ead5a71d00eb9",
                "parameters": [
                    {
                        "name": "uuid",
                        "in": "path",
                        "description": "task's uuid",
                        "required": true
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "status"
                                ],
                                "properties": {
                                    "status": {
